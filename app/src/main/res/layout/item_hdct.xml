<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardBackgroundColor="#fff"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="5dp"
    card_view:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/imageView"
            android:tag="image_tag"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:src="@drawable/ic_book"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_weight="2"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tvMaHDCT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="25dp"
                android:textStyle="bold"
                android:hint="Mã hóa đơn chi tiết"
                android:textAppearance="?android:attr/textAppearanceLarge"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvMaHD"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:textSize="14dp"
                    android:textStyle="italic"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="Mã hóa đơn" />
                <TextView
                    android:id="@+id/tvMaSach"
                    android:layout_weight="1"
                    android:textSize="14dp"
                    android:textStyle="italic"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Mã sách" />
            </LinearLayout>
                <TextView
                    android:id="@+id/tvSoluongHDCT"
                    android:layout_width="match_parent"
                    android:textSize="14dp"
                    android:textStyle="italic"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="Số lượng"
                    android:textAppearance="?android:attr/textAppearanceLarge"/>
            <TextView
                android:id="@+id/tvGiaBanHDCT"
                android:layout_width="match_parent"
                android:textSize="14dp"
                android:textStyle="italic"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Giá bán"
                android:textAppearance="?android:attr/textAppearanceLarge"/>
            <TextView
                android:id="@+id/tvThanhTienHDCT"
                android:layout_width="match_parent"
                android:textSize="14dp"
                android:textStyle="italic"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Thành tiền"
                android:textAppearance="?android:attr/textAppearanceLarge"/>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_margin="5dp"
                android:id="@+id/img_delete"
                android:src="@drawable/ic_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_margin="5dp"
                android:id="@+id/img_edit"
                android:src="@drawable/ic_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>